// Online C compiler to run C program online
#include <stdio.h>
int main() {
    float peso, idade;
    int grupo, risco;
 
     printf("Qual o seu peso\n");
     scanf("%f", &peso);
      printf("Qual a sua idade\n");
     scanf("%f", &idade);
     
     // Idade 
     if(idade < 20){
         grupo = 1; }
     else if(idade >= 20 && idade <= 50){
         grupo = 2; }
     else if(idade > 50){
         grupo = 3; }
         
     // Grupo 1
     if(grupo == 1 && peso <= 60){
         risco = 9; }
     else if(grupo == 1 && peso > 60 && peso < 90){
         risco = 8; }
     else if(grupo == 1 && peso > 90){
         risco = 7; }
         
     //Grupo 2
     if(grupo == 2 && peso <= 60){
         risco = 6; }
     else if(grupo == 2 && peso > 60 && peso < 90){
         risco = 5; }
     else if(grupo == 2 && peso > 90){
         risco = 4; }
         
     //Grupo 3
     if(grupo == 3 && peso <= 60){
         risco = 3; }
     else if(grupo == 3 && peso > 60 && peso < 90){
         risco = 2;}
     else if(grupo == 3 && peso > 90){
         risco = 1; }
         
     printf("O nivel de risco Ã©..: %i\n", risco);
    return 0;
}
